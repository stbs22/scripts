CC=gcc

pregunta_1: pregunta_1.c main.c utilities.c
	$(CC) -g pregunta_1.c main.c utilities.c -o p1

pregunta_2: pregunta_2.c main.c utilities.c
	$(CC) -g pregunta_2.c main.c utilities.c -o p2

pregunta_3: pregunta_3.c main.c utilities.c
	$(CC) -g pregunta_3.c main.c utilities.c -o p3

pregunta_4: pregunta_4.c main.c utilities.c
	$(CC) -g pregunta_4.c main.c utilities.c -o p4

pregunta_5: pregunta_5.c main.c utilities.c
	$(CC) -g pregunta_5.c main.c utilities.c -o p5

p1: pregunta_1
	./p1

p2: pregunta_2
	./p2

p3: pregunta_3
	./p3

p4: pregunta_4
	./p4

p5: pregunta_5
	./p5

clean:
	rm -f p1 p2 p3 p4 p5